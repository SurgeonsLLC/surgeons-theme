{%- liquid
  assign section_prefix_class = 'main-product'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture

  capture review_exist
    for block in section.blocks
      case block.type
        when 'review'
          echo 'true'
          break
      endcase
    endfor
  endcapture

  capture complementary_exist
    echo 'true'
  endcapture
-%}
{%- style -%}
  .main-product_row {
    --mb-space: var(--block-spacing);
    margin-bottom: var(--mb-space);
  }

  .main-product_reviews-slider .rating-list,
  .main-product_reviews-slider .review_quote{
    display: flex;
  }

  .main-product_bottom-col--first:has(.product-recommendations_wrap.hidden){
    display: none;
  }

  .main-product_reviews-slider .review_quote-text,
  .main-product_reviews-slider .review_quote-cite-wrap,
  .main-product-bundle{
    display: block;
  }

  .main-product_reviews-slider {
    position: relative;
  }

  .main-product_reviews-slider .review_quote{
    flex-direction: column;
  }

  .main-product_reviews-slider .rating-list{
    line-height: 0;
  }

  .main-product_reviews-slider blockquote cite{
    font-style: normal;
  }

  .main-product_reviews-slider .rating-list,
  .main-product_reviews-slider .review_quote {
    align-items: center;
  }

  .main-product_reviews-slider .rating-list,
  .main-product_reviews-slider .review_quote {
    justify-content: center;
  }

  .main-product_reviews-slider blockquote p{
    display: inline;
  }

  .main-product_reviews-slider .review_quote-text{
    flex-grow: 1;
  }

  .main-product_reviews-slider .splide__arrows{
    margin-top: 20px;
  }

  .main-product_reviews-slider .review_quote{
    height: 100%;
  }

  .main-product_reviews-slider .review_quote{
    --quote-bdr-width: 0;
    --quote-pl: 0;
    padding: 42px 20px;
  }

  .main-product_reviews-slider .rating-list{
    margin-top: 16px;
  }

  .main-product_reviews-slider blockquote{
    margin: 0;
    --quote-font-size: 1.7rem;
    --quote-line-height: 2.6rem;
    --quote-font-weight: var(--font-general-weight);
    --quote-font-family: var(--font-general-family);
    --quote-font-style: italic;
    --quote-text-color: var(--section-foreground-color);
    margin-right: var(--quote-mr, 0);
    margin-left: var(--quote-ml, 0);
    padding-left: var(--quote-pl, 20px);
    font-family: var(--quote-font-family, inherit);
    font-weight: var(--quote-font-weight, inherit);
    font-style: var(--quote-font-style, italic);
    font-size: var(--quote-font-size, inherit);
    line-height: var(--quote-line-height, inherit);
    letter-spacing: var(--quote-font-spacing, 0);
    color: var(--quote-text-color, inherit);
    border-left: var(--quote-bdr-width, 2px) solid var(--quote-bdr-clr, currentColor);
  }

  .main-product_reviews-slider .review_quote-cite-wrap{
    margin-top: auto;
  }

  .main-product_reviews-slider blockquote q::after,
  .main-product_reviews-slider blockquote p::after,
  .main-product_reviews-slider blockquote q::before,
  .main-product_reviews-slider blockquote p::before{
    content: '"';
  }

  .main-product_reviews-slider blockquote q{
    quotes: none;
  }

  .main-product_reviews-slider blockquote cite{
    letter-spacing: normal;
    border-bottom: 0;
    display: inline-block;
  }

  .main-product_reviews-slider blockquote p{
    margin-top: 0;
    margin-bottom: 0;
  }

  .main-product_bottom-col--first,
  .main-product_bottom-col--second,
  .main-product_bottom-col--first.bottom_first--full,
  .main-product_bottom-col--second.bottom_second--full,
  .main-product_bottom-col--first:has(.product-recommendations_wrap.hidden) + .main-product_bottom-col--second{
    width: 100%;
  }

  .main-product_bottom-col--first{
    flex-shrink: 0;
  }

  .main-product-bundle,
  .main-product-bundle_totals-wrap,
  .main-product_reviews-slider .review_quote {
    border-radius: var(--section-radius);
  }

  .main-product-bundle {
    padding: 21px;
  }

  .main-product-bundle {
    border: 1px solid var(--section-widget-border-color);
  }

  .main-product-bundle_heading {
    margin-bottom: 23px;
  }

  .main-product-bundle_list {
    gap: 23px;
  }

  .main-product-bundle_list .cs-col {
    width: 150px;
  }

  .main-product-bundle_totals-wrap {
    background: var(--section-background-color);
    color: var(--section-foreground-color);
    padding: 11px 12px 15px 11px;
    margin-top: 18px;
  }

  .main-product-bundle_totals-wrap {
    border: 1px solid var(--section-border-color);
  }

  .bundle-total-text {
    font-size: 1.4rem;
    margin-right: 5px;
    font-family: var(--font-headings-family);
    line-height: 1.8rem;
  }

  
  .ftb_price .bundle-price {
    line-height: 2.8rem;
  }

  .ftb_price .bundle-price {
    font-size: 2rem;
  }

  .ftb_price .bundle-price,
  .bundle-total-text{
    font-weight: 600;
  }

  .main-product_bottom-col--second {
      margin-top: 12px;
    }

  @media(min-width: 768px) {
    .main-product_reviews-slider .review_quote{
      padding: 42px 45px;
    }

    .main-product-bundle_calculator{
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .main-product-bundle_calc-col--totals{
      margin-left: auto;
    }
  }

  @media(min-width: 992px){
    .main-product_reviews-slider .splide__arrows{
      position: absolute;
      bottom: 6px;
      left: 50%;
      transform: translateX(-50%);
    }

    .main-product_reviews-slider .splide__arrows{
      --focus-outline-color: var(--section-background-color);
    }

    .main-product_wrapper-bottom{
      display: flex;
    }

    .main-product_bottom-col--second {
      margin-top: 0;
    }

    .main-product_wrapper-bottom{
      margin-top: 31px;
      gap: 12px;
    }

    .main-product_bottom-col--first{
      width: calc(60% - 6px);
    }

    .main-product_bottom-col--second{
      width: calc(40% - 6px);
    }
  }
  @media(min-width: 1200px){
    .main-product_bottom-col--first{
      width: calc(66% - 6px);
    }
    .main-product_bottom-col--second{
      width: calc(34% - 6px);
    }

    .main-product-bundle_calc-col--totals{
      display: flex;
      align-items: center;
      gap: 21px;
    }
  }

