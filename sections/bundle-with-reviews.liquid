<div
  class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {% if section_container_layout == 'container-fluid' or section_container_layout == 'contained-container' %}{{ section_scheme_class }} {{ section_corner_radius }}{% endif %}"
  id="{{- section.id -}}"
  style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;"
>
  <div class="{{ section_container_layout }}">
    <div class="{{ section_prefix_class }}_wrapper {% if section_container_layout == 'container' %}{{ section_scheme_class }} {{ section_corner_radius }} internal--spacing{% endif %}" id="{{- section.id -}}-description">
      {%- if complementary_exist == 'true' or review_exist == 'true' -%}
        <div class="{{ section_prefix_class }}_wrapper-bottom">
          {%- if complementary_exist == 'true' -%}
            <div class="{{ section_prefix_class }}_bottom-col {{ section_prefix_class }}_bottom-col--first {% unless review_exist == 'true' %}bottom_first--full{% endunless %}">
              <div
                class="{{ section_prefix_class }}_row {{ section_prefix_class }}_row--complementary"
              >
                <bundle-product-wrapper class="main-product-bundle widget--styles">
                  <div class="main-product-bundle_wrapper" data-bundle-product-wrapper="">
                    <div class="main-product-bundle_head">
                      {%- if section.settings.complementary_heading != blank -%}
                      <h2 class="main-product-bundle_heading {{ section.settings.complementary_heading_size }} {{ section.settings.complementary_heading_weight }} mty">
                        {{- section.settings.complementary_heading -}}
                      </h2>
                      {%- endif -%}
                    </div>
                    <div class="main-product-bundle_products-wrap">
                      <div class="product-recommendations_wrap">
                        <product-recommendations data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=10&intent=complementary">
                          <div class="product-recommendations">
                            {%- if recommendations.performed and recommendations.products_count > 0 -%}
                              <ul class="main-product-bundle_list custom-scroll custom-scroll--horizontal {{ section_prefix_class }}_cs-scroll list-unstyled">
                                {%- liquid
                                  for product in recommendations.products
                                    render 'product-bundle-card', product: product, section_prefix_class: 'main-product-bundle', section: section
                                  endfor
                                -%}
                              </ul>
                            {%- endif -%}
                          </div>
                        </product-recommendations>
                      </div>
                    </div>
                    <div class="main-product-bundle_totals-wrap">
                      <bundle-calculator
                        class="main-product-bundle_calculator"
                        data-loader-selector="[data-bundle-calc-loader]"
                        {% unless template.name == 'cart' %}
                          data-modal="true"
                          data-modal-ref='[data-modal-ref="modal-cart-drawer"][data-expanded="false"]'
                          {% else %}
                            data-redirect="{{- routes.cart_url -}}"
                        {% endunless %}
                        data-sections='[
                          {
                            "id": "cart-head",
                            "selectors": ["[data-render-cart-bubble]", "[data-render-cart-text]", "[data-render-cart-totals]"]
                          },
                          {
                            "id": "cart-showcase",
                            "selectors": ["[data-line-items-drawer-container]"]
                          }
                        ]'
                      >
                        <div class="main-product-bundle_calc-col main-product-bundle_calc-col--thumbs">
                          <ul class="list-unstyled main-product-bundle_thumbs-list" data-thumbnails-list="">
                            {%- comment -%}thumbnails will be rendered here{%- endcomment -%}
                          </ul>
                        </div>
                        <div class="main-product-bundle_calc-col main-product-bundle_calc-col--totals">
                          <strong class="bundle-total-price-wrapper mty">
                            <span class="bundle-total-text">{{- 'templates.bundle.total_price' | t -}}:</span>
                            <span class="ftb_price">
                              <span class="bundle-price" data-bundle-price="">
                                {{ 0 | money }}
                              </span>
                              <s class="bundle-compare-price text-size--small --alternate-color --fw-normal hidden" data-bundle-compare-price="">
                                {{ 0 | money }}
                              </s>
                            </span>
                            {% if settings.show_currency_code %}
                              <small class="bundle-curr-code">{{- localization.country.currency.iso_code -}}</small>
                            {% endif %}
                          </strong>
                          <button type="button" class="bundle-cart-submit button button--secondary disabled mty" data-bundle-atc-btn="">
                            {%- render 'icons-data', width: 21, height: 21, use_icon: true, icon_reference: 'new-cart' -%}
                            <span class="parent-node bcs-counter-wrap visually-hidden"><span class="bcs-count" data-num-count="">0</span> item(s) </span>
                            {{ 'templates.bundle.add_cart' | t }}
                          </button>
                          <span class="hidden bundle-loader" data-bundle-calc-loader="">
                            <span class="visually-hidden">{{- 'accessibility.loading' | t -}}</span>
                            {%- render 'icons-data', width: 40, height: 40, use_icon: true, icon_reference: 'loader' -%}
                          </span>
                        </div>
                      </bundle-calculator>
                    </div>
                  </div>
                </bundle-product-wrapper>
              </div>
            </div>
          {%- endif -%}
          {%- if review_exist == 'true' -%}
            <div class="{{ section_prefix_class }}_bottom-col {{ section_prefix_class }}_bottom-col--second {% unless complementary_exist == 'true' %}bottom_second--full{% endunless %}">
              <splide-slider
                data-slider-type="default"
                data-go-to="true"
              >
                <div
                  class="splide {{ section_prefix_class }}_reviews-slider"
                  data-splide='{
                    "type": "slide",
                    "live": true,
                    "drag": true,
                    "autoplay": {{ section.settings.reviews_auto_play }},
                    "rewind": false,
                    "gap": "30px",
                    "perMove": 1,
                    "perPage": 1,
                    "arrows": {{ section.settings.reviews_show_navigation }},
                    "pagination": false,
                    "mediaQuery": "min",
                    "interval": {{- section.settings.review_change_slides_every | times: 1000 -}},
                    "breakpoints": {
                      "576": {
                        "perPage": 2
                      },
                      "992": {
                        "perPage": 1
                      }
                    }
                  }'
                >
                  <div class="splide__track">
                    <div class="splide__list">
                      {%- for block in section.blocks -%}
                        {%- case block.type -%}
                          {%- when 'review' -%}
                            <div class="splide__slide" {{ block.shopify_attributes }}>
                              {%- render 'review-row', block: block, index: forloop.index, section_id: section.id -%}
                            </div>
                        {%- endcase -%}
                      {%- endfor -%}
                    </div>
                  </div>
                  {% if section.blocks.size > 1 %}
                    {%- if section.settings.reviews_show_navigation -%}
                      <div class="splide-controls splide__arrows --justify-center">
                        {%- if section.settings.reviews_show_navigation -%}
                          <button class="splide__arrow splide__arrow--prev button button--primary button--icn">
                            <span class="visually-hidden">{{- 'accessibility.slider.previous' | t -}}</span>
                            {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'left-arrow' -%}
                          </button>
                        {%- endif -%}
                        {%- if section.settings.reviews_show_navigation -%}
                          <button class="splide__arrow splide__arrow--next button button--primary button--icn">
                            <span class="visually-hidden">{{- 'accessibility.slider.next' | t -}}</span>
                            {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'right-arrow' -%}
                          </button>
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </splide-slider>
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
