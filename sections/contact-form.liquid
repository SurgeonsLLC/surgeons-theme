{%- liquid
  assign section_prefix_class = 'contact-form'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture max_header_size
    echo settings.page_width | times: section.settings.max_header_size | divided_by: 100
  endcapture

  capture loading_attr
    if section.index > 1
      echo 'lazy'
      else
        echo 'eager'
    endif
  endcapture

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture
-%}
{%- style -%}
  .form__message, 
  .error-email,
  .contact-form_wrapper,
  .form-wrapper_btn-wrap,
  .contact-form_block .grid_col{
    display: flex;
  }

  .form-group,
  .contact-form_banner-image{
    position: relative;
  }

  .form-wrapper_btn-wrap,
  .form__message,
  .error-email {
    align-items: center;
  }

  .form__message,
  .error-email {
    gap: 10px;
  }

  .form__message {
    font-weight: 400;
    font-size: 1.8rem;
    line-height: 2.8rem;
  }

  .newsletter-form_results-wrap,
  .form__message svg,
  .errors-list_link {
    color: var(--section-error-color);
  }

  .success-message .image,
  .errors-list {
    margin-bottom: 10px;
  }

  .errors-list_link {
    text-decoration: none;
  }

  .form-wrapper_btn-label,
  .error-email,
  .contact__field-error {
    font-size: 1.4rem;
  }

  .error-email,
  .contact__field-error {
    line-height: 2.1rem;
  }

  .success-message {
    text-align: center;
    margin-top: 39px;
    font-size: 2rem;
    line-height: 3.3rem;
    color: var(--section-success-color);
  }

  .success-message p {
    margin: 0;
  }

  .success-message_icn {
    display: block;
    margin-bottom: 14px;
  }

  .form-group textarea,
  .error-email{
    margin-top: 10px;
  }

  .form-wrapper_btn-wrap{
    margin-top: 19px;
  }

  .form-wrapper_button {
    --button-padding-y: 1.4rem;
    --button-padding-x: 2.8rem;
    --button-font-size: 1.4rem;
    --button-font-weight: 600;
    --button-line-height: 1.8rem;
    --button-font-family: var(--font-headings-family);
  }

  .contact-form{
    --q-align-value: var(--mobile-q-align);
  }

  .contact-form .form-group textarea {
    resize: none;
    --input-height: 208px;
  }

  .contact-form .form-group input{
    --input-height: 5.6rem;
  }

  .contact-form_form-wrapper .form-group--email,
  .contact-form_form-wrapper .form-group--name{
    margin-bottom: 17px;
  }

  .contact-form_wrapper {
    flex-wrap: wrap;
    gap: 18px;
    margin-top: 25px;
    flex-direction: column;
  }

  .contact-form .form-wrapper_description {
    --mt-top: 10px;
  }

  .contact-form .heading-head{
    margin-bottom: 43px;
  }

  .form-wrapper_main-heading{
    --mt-bottom: 28px;
  }

  .contact-form{
    --desktop-columns-count: 1;
  }

  .contact-form_block {
    --cp-spacer-left: 8px;
    --cp-spacer-right: 8px;
  }

  .contact-form_store-col{
    padding: 13px 30px 14px 30px;
    border-radius: var(--section-radius);
    width: 100%;
  }

  .contact-form_banner-image{
    border-radius: var(--section-radius);
  }

  .contact-form_banner-image img,
  .contact-form_banner-image svg{
    border-radius: inherit;
  }

  .contact-form_form-wrapper .form-group--email,
  .contact-form_form-wrapper .form-group--name{
    width: 100%;
  }

  .contact-form_border-btm{
    border-bottom: 1px solid var(--section-border-color);
    padding-bottom: 25px;
  }

  .form-wrapper_btn-wrap{
    justify-content: space-between;
    gap: 20px;
  }

  .form-wrapper_btn-label,
  .contact-form_banner-image{
    flex-grow: 1;
  }

  .form-wrapper_btn-wrap-btn{
    flex-shrink: 0;
    text-align: end;
  }

  .form-wrapper_btn-label{
    line-height: 2rem; 
    color: var(--section-alternative-color);
  }

  .contact-form_internal-wrapper.internal--spacing{
    padding: 10px 15px;
  }

  .btn--no-label{
    margin-left: auto;
  }

  @media(min-width: 576px){
    .contact-form {
      --desktop-columns-count: 2;
    }
  }

  @media (min-width: 768px) {
    .contact-form {
      --desktop-columns-count: 3;
    }

    .contact-form{
      --q-align-value: var(--desktop-q-align);
    }

    .contact-form{
      overflow: visible;
    }

    .contact-form_wrapper {
      gap: 20px;
      flex-direction: row;
    }

    .contact-form--form-center .contact-form_col-form {
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      max-width: 703px;
    }

    .contact-form_col-form{
      width: 64.4%;
    }

    .contact-form_internal-wrapper.internal--spacing{
      padding: 10px 30px;
    }
  }

  @media (min-width:1200px) {
    .contact-form_wrapper {
      gap: 33px;
    }

    .contact-form_store-col{
      display: flex;
      justify-content: space-between;
      gap: 20px;
      align-items: center;
    }

    .contact-form_block-heading{
      width: 35%;
    }

    .contact-form_block-description{
      width: 65%;
      text-align: right;
    }

    .contact-form{
      --desktop-columns-count: var(--columns-count);
    }
  }

  @media(max-width: 767px){
    .contact-form_banner-image{
      height: 400px;
    }
  }

  {%- assign query = '414px' -%}
