<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {% if section_container_layout == 'container-fluid' or section_container_layout == 'contained-container' %}{{ section_scheme_class }} {{ section_corner_radius }}{% endif %}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --mobile-q-align: {{ section.settings.section_mobile_text_alignment }}; --desktop-q-align: {{ section.settings.section_text_alignment }}; --columns-count: {{ section.settings.number_of_columns_on_desktop }}; --mobile-columns-count: {{ section.settings.number_of_columns_on_mobile }};" id="{{- section.id -}}">
  <div class="{{ section_container_layout }}">
    <div class="{{ section_prefix_class }}_internal-wrapper {% if section_container_layout == 'container' %}{{ section_scheme_class }} {{ section_corner_radius }} internal--spacing{% endif %}">
      <div class="{{ section_prefix_class }}_header-wrapper">
        {%- if section.settings.section_caption != blank or section.settings.section_main_heading != blank or section.settings.section_main_description != blank -%}
          <header class="heading-head inner-container --word-break --q-align" style="--max-content: {{ max_header_size }}px;">
            {%- if section.settings.section_caption != blank -%}
              <div
                class="{{ section_prefix_class }}_caption --word-break {{ section.settings.section_caption_size }} {{ section.settings.section_caption_weight }} mty {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                data-margin="0px 0px -20px 0px"
                data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                data-options='{"duration":1000,"easing":"ease","delay":0,"fill":"both","iterations":1}'
              >
                {{- section.settings.section_caption -}}
              </div>
            {%- endif -%}
            {%- if section.settings.section_main_heading != blank -%}
              <h2
                class="{{ section_prefix_class }}_heading --h-anchor-none {{ section.settings.section_main_heading_size }} {{ section.settings.section_main_heading_weight }} mty {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                data-margin="0px 0px -20px 0px"
                data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                data-options='{"duration":1000,"easing":"ease","delay":150,"fill":"both","iterations":1}'
              >
                {{- section.settings.section_main_heading -}}
              </h2>
            {%- endif -%}
            {%- if section.settings.section_main_description != blank -%}
              <div
                class="{{ section_prefix_class }}_description --word-break {{ section.settings.main_description_text_size }} {{ section.settings.section_main_description_weight }} mty {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                data-margin="0px 0px -20px 0px"
                data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                data-options='{"duration":1000,"easing":"ease","delay":250,"fill":"both","iterations":1}'
              >
                {{- section.settings.section_main_description -}}
              </div>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
      <div class="{{ section_prefix_class }}_block grid {% if section.settings.border_bottom %}{{ section_prefix_class }}_border-btm{% endif %}">
        {%- for block in section.blocks -%}
          {%- liquid
            assign counter = forloop.index | modulo: section.settings.number_of_columns_on_desktop
            if counter == 0
              assign counter = section.settings.number_of_columns_on_desktop
            endif
          -%}
          <div
            class="grid_col"
            {{ block.shopify_attributes }}
          >
            <div
              class="contact-form_store-col widget--styles {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
              data-margin="0px 0px -20px 0px"
              data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
              data-options='{"duration":1000,"easing":"ease","delay":{{ counter | times: 100 }},"fill":"both","iterations":1}'
            >
              <h3 class="contact-form_block-heading --word-break {{ section.settings.card_heading_size }} {{ section.settings.card_heading_weight }}">
                {{- block.settings.heading -}}
              </h3>
              <div class="contact-form_block-description {{ section.settings.card_description_size }} {{ section.settings.card_description_weight }} --word-break">
                {{- block.settings.description -}}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <div class="{{ section_prefix_class }}_wrapper {% if section.blocks.size > 0 %}simple{% else %}--justify-center{% endif %}">
        <div
          class="{{ section_prefix_class }}_banner-image {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
          data-margin="0px 0px -20px 0px"
          data-frames='[{"opacity":"0","transform":"translateX(-15px)"},{"opacity":"1","transform":"translateX(0px)"}]'
          data-options='{"duration":1000,"easing":"ease","delay":150,"fill":"both","iterations":1}'
        >
          {%- if section.settings.banner_image != blank -%}
            {%- liquid 
              capture image_alt
                unless section.settings.banner_image.alt == blank
                  echo section.settings.banner_image.alt
                  else
                    echo 'contact_form.image_alt' | t
                endunless
              endcapture
            -%}
            {{- section.settings.banner_image | image_url: width: 1944 | image_tag: class: 'object-fit object-fit--absolute', loading: loading_attr, alt: image_alt, widths: '972, 1944', sizes: '(max-width: 767px) 972vw, 1944vw' -}}
          {%- else -%}
            {%- render 'placeholder-svgs', type: 'hero', index: 1, class: 'object-fit object-fit--absolute' -%}
          {%- endif -%}
        </div>
        <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_col-form">
          {%- if section.settings.form_heading != blank or section.settings.form_description != blank -%}
            <header class="heading-head --align-{{ section.settings.form_text_alignment }}">
              {%- if section.settings.form_heading != blank -%}
                <h2
                  class="form-wrapper_heading {{ section_prefix_class }}_heading {{ section.settings.form_heading_weight }} {{ section.settings.form_heading_size }} --word-break --h-anchor-none mty {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                  data-margin="0px 0px -20px 0px"
                  data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                  data-options='{"duration":1000,"easing":"ease","delay":250,"fill":"both","iterations":1}'
                >
                  {{- section.settings.form_heading -}}
                </h2>
              {%- endif -%}
              {%- if section.settings.form_description != blank -%}
                <div
                  class="form-wrapper_description {{ section_prefix_class }}_description {{ section.settings.form_text_size }} {{ section.settings.form_description_weight }} --word-break mty {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                  data-margin="0px 0px -20px 0px"
                  data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                  data-options='{"duration":1000,"easing":"ease","delay":350,"fill":"both","iterations":1}'
                >
                  <p>{{- section.settings.form_description -}}</p>
                </div>
              {%- endif -%}
            </header>
          {%- endif -%}
          <div
            class="form-wrapper {{ section_prefix_class }}_form-wrapper {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
            data-margin="0px 0px -20px 0px"
            data-frames='[{"opacity":"0","transform":"translateX(15px)"},{"opacity":"1","transform":"translateX(0px)"}]'
            data-options='{"duration":1000,"easing":"ease","delay":250,"fill":"both","iterations":1}'
          >
            {%- assign form_id = 'ContactForm' | append: section.id -%}
              {%- form 'contact', id: form_id, class: 'isolate' -%}
                {%- if form.errors != blank -%}
                  <strong class="form__message --fw-normal mty" role="alert" tabindex="-1" autofocus>
                    {%- render 'icons-data', width: 22, height: 22, use_icon: true, icon_reference: 'error' -%}
                    {{- 'erorr.common_heading' | t -}}
                  </strong>
                  <ul class="errors-list list-unstyled">
                    <li class="errors-list_item">
                      <smooth-anchor data-offset=".sticky-header-wrapper">
                        <a class="errors-list_link text-size--small" href="#ContactForm-email-{{ form_id }}">
                          *{{- form.errors.translated_fields.email | capitalize }}
                          {{ form.errors.messages.email -}}
                        </a>
                      </smooth-anchor>
                    </li>
                  </ul>
                {%- endif -%}
                <div class="two-form-group">
                  <div class="form-group form-group--name">
                    <label class="text-size--small --fw-medium visually-hidden" for="contact-name-{{ form_id }}">{{- 'contact_form.form_label.name.label' | t -}}</label>
                    <input type="text" id="contact-name-{{ form_id }}" name="contact[Name]" placeholder="{{- 'contact_form.form_placeholder.name.label' | t -}}">
                  </div>
                  <div class="form-group form-group--email">
                    <label class="text-size--small --fw-medium visually-hidden" for="ContactForm-email-{{ form_id }}">{{- 'contact_form.form_label.email.label' | t -}}</label>
                    <input type="email" id="ContactForm-email-{{ form_id }}" name="contact[email]" placeholder="{{- 'contact_form.form_placeholder.email.label' | t -}}"
                    onkeydown="validation()">
                    <div class="newsletter-form_results-wrap results-wrap_message text-size--small">
                      {%- if form.errors contains 'email' -%}
                        <div class="error-email">
                          {%- render 'icons-data', width: 22, height: 22, use_icon: true, icon_reference: 'error' -%}
                          <small class="contact__field-error" id="ContactForm-email-{{ form_id }}-error">
                            {{- form.errors.translated_fields.email | capitalize }}
                            {{ form.errors.messages.email -}}
                          </small>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label class="text-size--small --fw-medium visually-hidden" for="contact-textarea-{{ form_id }}">{{- 'contact_form.form_label.your_request.label' | t -}}</label>
                  <textarea name="contact[textarea]" id="contact-textarea-{{ form_id }}" placeholder="{{- 'contact_form.form_placeholder.your_request.label' | t -}}"></textarea>
                </div>
                <div class="form-wrapper_btn-wrap">
                  <div class="form-wrapper_btn-wrap-btn {% unless section.settings.form_label != blank %}btn--no-label{% endunless %}">
                    <button class="button button--secondary form-wrapper_button" type="submit">
                      {{- 'contact_form.submit_label' | t -}}
                    </button>
                  </div>
                </div>
                {%- if form.posted_successfully? -%}
                  <div class="success-message" role="alert" tabindex="-1" autofocus>
                    <i class="success-message_icn">
                      {%- render 'icons-data', width: 54, height: 54, use_icon: true, icon_reference: 'smile' -%}
                    </i>
                    <p>{{- 'contact_form.success.heading1' | t -}}</p>
                    <p>{{- 'contact_form.success.heading2' | t -}}</p>
                  </div>
                {%- endif -%}
              {%- endform -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{%- javascript -%}
  class SmoothAnchor extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback(){
      this.anchor = this.querySelector('a');
      this.anchor.addEventListener('click', this.onClickRef.bind(this));
    }
    
    onClickRef(){
      event.preventDefault();
      const targetId = this.anchor.getAttribute('href');
      const targetElement = document.querySelector(targetId);

      if(targetElement){
        if(this.dataset.offset){
          let offset = 0;
          const offsetElement = document.querySelector(this.dataset.offset);
          if(!offsetElement){
            doScroll();
            if(targetElement.nodeName.toLowerCase() === 'input') targetElement.focus();
            return
          };
          const elementPosition = targetElement.getBoundingClientRect().top;
          offset = elementPosition + window.scrollY - offsetElement.offsetHeight;
          window.scrollTo({
            top: offset,
            behavior: "smooth"
          });
          if(targetElement.nodeName.toLowerCase() === 'input') targetElement.focus();
          return;
        }
        doScroll();
        if(targetElement.nodeName.toLowerCase() === 'input') targetElement.focus();
      }
        
      function doScroll(){
        targetElement.scrollIntoView({
          behavior: "smooth"
        });
      }
    }
  }
  if(!customElements.get('smooth-anchor')) customElements.define('smooth-anchor', SmoothAnchor);
{%- endjavascript -%}
