      "label": "t:sections.announcement_bar.settings.show_home_only.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "sticky_bar",
      "label": "t:sections.bottom_bar.settings.sticky_bar.label",
      "default": true
    },
    {
      "type": "select",
      "id": "section_container_layout",
