          "value": "both_corners_radius",
          "label": "t:round_crnr.options.opt_4.label"
        }
      ],
      "default": "no_corners_radius"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "t:sections.bottom_bar.settings.show_top_border.label",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "default": "scheme1",
      "label": "t:color_scheme.label"
    },
    {
      "type": "header",
      "content": "t:scroll.content"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "t:scroll.settings.speed.label",
      "min": 1,
      "max": 30,
      "step": 1,
      "default": 15,
      "unit": "sec"
    },
    {
      "type": "select",
      "id": "marquee_direction",
      "label": "t:scroll.settings.direction.label",
      "options": [
        {
          "value": "marquee_backward",
          "label": "t:scroll.settings.direction.options.opt_1.label"
        },
        {
          "value": "marquee_forward",
          "label": "t:scroll.settings.direction.options.opt_2.label"
        }
      ],
      "default": "marquee_backward"
    },
    {
      "type": "checkbox",
      "label": "t:scroll.settings.on_hover.label",
      "id": "marquee_on_hover",
      "default": false
    }
  ],
  "blocks": [
    {
      "name": "t:sections.bottom_bar.blocks.banner.name",
      "type": "banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:image.label",
          "info": "t:sections.bottom_bar.blocks.banner.settings.image.info"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:heading.label",
          "default": "Add important info here"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "t:sections.bottom_bar.blocks.banner.settings.url.label"
        },
        {
          "type": "checkbox",
          "id": "open_new_window",
          "label": "t:target_blank.label",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.bottom_bar.name",
      "blocks": [
        {
          "type": "banner",
          "settings": {
