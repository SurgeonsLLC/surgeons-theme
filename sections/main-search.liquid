{%- liquid
  assign section_prefix_class = 'main-search'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
  assign banner_color_scheme = section.settings.banner_color_scheme | prepend: 'scheme scheme--'
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign base_url = request.path
  
  if search.url
    assign results_url = search.url
    else
      assign terms = search.terms | escape
      assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  endif

  if section.settings.enable_sort
    capture sort_value
      for option in search.sort_options
        if option.value == sort_by
          echo option.value
        endif
      endfor
    endcapture
    assign base_url = base_url | append: results_url
  endif

  capture max_products_to_show
    assign columns_count = section.settings.number_of_columns_on_desktop | times: 1
    echo columns_count | times: section.settings.number_of_rows_on_desktop
  endcapture

  capture enable_description
    unless search.description == blank
      if section.settings.show_description
        echo 'true'
      endif
    endunless
  endcapture

  capture results_text
    if search.performed
      echo 'search.results_with_count_and_term' | t: count: search.results_count, terms: search.terms
      else
        echo 'search.s_for' | t
    endif
  endcapture

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture

  capture main_page_max_content_size
    echo settings.page_width | times: section.settings.max_content_size | divided_by: 100
  endcapture

  capture main_page_section_parallax_class
    if section.settings.parallax_effect
      echo '--parallax-effect'
    endif
  endcapture

  capture main_page_section_container_layout
    case section.settings.main_page_section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture main_page_section_corner_radius
    case section.settings.main_page_section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture

  capture main_page_section_height_class
    case section.settings.section_height
      when 'small'
        echo '--small-height'
      when 'medium'
        echo '--medium-height'
      when 'window_height'
        echo '--vh-height'
    endcase
  endcapture

  capture main_page_content_alignment
    case section.settings.content_alignment
      when 'top'
        echo 'main-page_tcenter'
      when 'middle'
        echo 'main-page_mcenter'
      when 'bottom'
        echo 'main-page_bcenter'
    endcase
  endcapture
-%}
