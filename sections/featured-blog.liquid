{%- liquid
  assign section_prefix_class = 'featured-blog'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture max_header_size
    echo settings.page_width | times: section.settings.max_header_size | divided_by: 100
  endcapture

  capture loading_attr
    unless section.index != 1
      echo 'eager'
      else
        echo 'lazy'
    endunless
  endcapture

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture
-%}
{%- style -%}
  .blog-card_image{
    border-radius: var(--section-radius);
    overflow: hidden;
    margin-bottom: 19px;
  }

  .blog-card_excerpt,
  .blog-card_image,
  .blog-card_tag-link,
  .featured-blog_reviews-aside .review_quote-text,
  .featured-blog_reviews-aside .review_quote-cite-wrap{
    display: block;
  }

  .blog-card_image-date,
  .blog-card_image,
  .featured-blog_reviews-aside blockquote{
    position: relative;
  }

  a.blog-card_image:focus-visible{
    --focus-outline-offset: 1px;
  }

  .blog-card_image svg,
  .blog-card_image img{
    border-radius: inherit;
  }

  .blog-card_heading {
    --headings-font-weight: 500;
  }

  .blog-card_heading a{
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .blog-card_tags-list,
  .blog-card_stats-wrap,
  .blog-card_subtitle,
  .blog-card,
  .featured-blog_reviews-aside .rating-list,
  .featured-blog_reviews-aside .review_quote{
    display: flex;
  }

  .blog-card_subtitle,
  .blog-card_stats-wrap,
  .blog-card_tags-list{
    flex-wrap: wrap;
  }

  .--tag-full{
    margin-top: 21px;
  }

  .--normal-tag{
    margin-top: 17px;
  }

  .blog-card_excerpt,
  .--comments{
    margin-top: 14px;
  }

  .blog-card_tags-list{
    gap: 8px;
  }

  .blog-card_stats-wrap,
  .blog-card_subtitle{
    gap: 10px;
  }

  .--margin-date{
    --mt-bottom: 7px;
  }

  .--excerpt{
    --mt-top: 19px;
  }

  .blog-card_tag-link{
    padding: 7px 13px;
    border-radius: calc(var(--section-radius) * 99);
    background-color: var(--section-widget-background-color);
    color: var(--section-widget-foreground-color);
    transition: color 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
  }

  .blog-card_stats-wrap,
  .blog-card_tag-link,
  .blog-card_read-more{
    font-size: 1.4rem;
    line-height: 1.8rem;
  }

  .blog-card_subtitle,
  .blog-card_tag-link,
  .blog-card_read-more{
    font-family: var(--font-headings-family);
  }

  .blog-card_subtitle,
  .blog-card_tag-link{
    font-weight: 600;
  }

  .blog-card_subtitle + .blog-card_subtitle::before{
    content: "";
    background: var(--section-foreground-color);
    flex-shrink: 0;
    pointer-events: none;
    margin-right: 3px;
  }

  .blog-card_subtitle + .blog-card_subtitle::before,
  .blog-card_read-more{
    margin-left: 3px;
  }

  .blog-card_subtitle:last-child:not(:nth-child(2))::before{
    display: none;
  }

  .blog-card,
  .featured-blog_reviews-aside .review_quote{
    flex-direction: column;
  }

  .blog-card_top-wrap,
  .featured-blog_reviews-aside .review_quote-text{
    flex-grow: 1;
  }

  .blog-card,
  .featured-blog .heading-head,
  .featured-blog_grid.--no-reviews{
    width: 100%;
  }

  .blog-card_read-more{
    padding: 3px;
    color: var(--section-heading-color);
  }

  .blog-card_stats-wrap--float{
    position: absolute;
    bottom: 17px;
    right: 13px;
    padding: 7px 11px;
    background: var(--section-background-color);
    border-radius: 100px;
  }

  .featured-blog {
    --q-align-value: var(--mobile-q-align);
    --q-justify-value: var(--mobile-justify-align);
    overflow: visible;
  }

  .featured-blog .heading-head {
    margin-bottom: 48px;
  }

  .featured-blog_description {
    --mt-top: 12px;
  }

  .featured-blog_foot{
    margin-top: 32px;
  }

  .featured-blog_reviews-aside,
  .featured-blog_reviews-aside .splide__arrows{
    margin-top: 20px;
  }

  .featured-blog_wrapper.internal--spacing{
    padding: 10px 15px;
  }
  
  .featured-blog_reviews-aside blockquote p{
    margin-top: 0;
    display: inline;
  }

  .blog-card_stats-wrap--float,
  .featured-blog_reviews-aside blockquote p{
    margin-bottom: 0;
  }

  .featured-blog_reviews-aside .review_quote{
    --quote-bdr-width: 0;
    --quote-pl: 0;
    padding: 42px 20px;
    border-radius: var(--section-radius);
    height: 100%;
  }

  .featured-blog_reviews-aside .rating-list,
  .featured-blog_reviews-aside .review_quote{
    justify-content: center;
  }

  .featured-blog_reviews-aside .rating-list,
  .featured-blog_reviews-aside .review_quote,
  .blog-card_subtitle{
    align-items: center;
  }

  .featured-blog_reviews-aside .rating-list{
    margin-top: 16px;
  }

  .blog-card_subtitle + .blog-card_subtitle::before,
  .featured-blog_reviews-aside .rating-list{
    line-height: 0;
  }

  .featured-blog_reviews-aside blockquote{
    margin: 0;
    --quote-font-size: 1.7rem;
    --quote-line-height: 2.6rem;
    --quote-font-weight: var(--font-general-weight);
    --quote-font-family: var(--font-general-family);
    --quote-font-style: italic;
    --quote-text-color: var(--section-foreground-color);
    margin-right: var(--quote-mr, 0);
    margin-left: var(--quote-ml, 0);
    padding-left: var(--quote-pl, 20px);
    font-family: var(--quote-font-family, inherit);
    font-weight: var(--quote-font-weight, inherit);
    font-style: var(--quote-font-style, italic);
    font-size: var(--quote-font-size, inherit);
    line-height: var(--quote-line-height, inherit);
    letter-spacing: var(--quote-font-spacing, 0);
    color: var(--quote-text-color, inherit);
    border-left: var(--quote-bdr-width, 2px) solid var(--quote-bdr-clr, currentColor);
  }

  .featured-blog_reviews-aside .review_quote-cite-wrap{
    margin-top: auto;
  }

  .featured-blog_reviews-aside blockquote q::after,
  .featured-blog_reviews-aside blockquote p::after,
  .featured-blog_reviews-aside blockquote q::before,
  .featured-blog_reviews-aside blockquote p::before{
    content: '"';
  }

  .featured-blog .blog-card_image.--media-size-landscape{
    --ratio-divider: 0.49;
  }

  .featured-blog_reviews-aside blockquote q{
    quotes: none;
  }

  .featured-blog_reviews-aside blockquote cite{
    font-style: normal;
    letter-spacing: normal;
    border-bottom: 0;
    display: inline-block;
  }

  .featured-blog_sticky-wrap{
    position: sticky;
    top: var(--page-header-height, 0);
  }

  @media (min-width: 768px){
    .featured-blog {
      --q-align-value: var(--desktop-q-align);
      --q-justify-value: var(--desktop-justify-align);
    }

    .featured-blog_two-col{
      display: flex;
      gap: 15px;
    }

    .featured-blog_reviews-aside .splide__arrows{
      --focus-outline-color: var(--section-background-color);
    }

    .featured-blog_grid{
      width: 50%;
    }

    .featured-blog_reviews-aside{
      width: 50%;
      margin-top: 0;
    }

    .featured-blog_reviews-aside .splide__arrows{
      position: absolute;
      bottom: 6px;
      left: 50%;
      transform: translateX(-50%);
    }

    .featured-blog_wrapper.internal--spacing{
      padding: 10px 30px;
    }

    .featured-blog_reviews-aside .review_quote{
      padding: 42px 45px;
    }
  }

  @media(min-width: 992px){
    .featured-blog_grid{
      width: 55.5%;
    }

    .featured-blog_reviews-aside{
      width: 43.5%;
    }
  }
