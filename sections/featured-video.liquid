{%- liquid
  assign section_prefix_class = 'featured-video'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture

  capture loading_attr
    unless section.index != 1
      echo 'eager'
    else
      echo 'lazy'
    endunless
  endcapture
-%}
{%- style -%}
  .video-card button:focus-visible .deferred-media__poster-icn {
    outline: 1px solid var(--section-background-color);
  }

  .featured-video {
    --focus-outline-offset: 2px;
  }
  .featured-video .video-card {
    border-radius: var(--section-radius);
    border: 1px solid var(--section-border-color);
  }

  .video-card .deferred-media__poster {
    border-radius: var(--section-radius);
  }

  .featured-video .container-fluid {
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .featured-video .internal--spacing {
    padding: 0;
  }

  .featured-video_video-item {
    border-radius: inherit;
  }

  .featured-video .video-card .--media-size--blank.--media-size-adapt {
    --ratio-divider: 0.8055;
  }

  .button--caption_wrapper .video__caption {
    color: color-mix(in srgb, var(--section-heading-color) 80%, var(--section-foreground-color) 20%);
  }

  .featured-video .container-fluid .heading-head {
    margin-bottom: 20px;
    padding-left: 15px;
    padding-right: 15px;
  }

  .featured-video .deferred-media__poster-icn {
    width: 35px;
    height: 35px;
    color: var(--section-background-color);
    background: var(--section-heading-color);
  }

  .featured-video .deferred-media__poster-icn {
    top: auto;
    left: auto;
    transform: inherit;
    position: relative;
  }

  .button--caption_wrapper,
  .featured-video_content {
    display: flex;
  }

  .button--caption_wrapper,
  .featured-video_content {
    flex-direction: column;
  }

  .button--caption_wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .video_heading {
    color: var(--section-heading-color);
    margin: 0 0 0;
  }

  .featured-video_content .video_heading {
    color: var(--section-widget-heading-color);
  }

  .button--caption_wrapper .video_heading,
  .button--caption_wrapper .video__caption {
    display: none;
    max-width: 700px;
  }

  .featured-video_content {
    background: var(--section-widget-background-color);
    color: var(--section-widget-foreground-color);
    border-bottom-left-radius: inherit;
    border-bottom-right-radius: inherit;
    margin-top: -33px;
    padding: 50px 20px 20px;
  }

  .featured-video .video-card.--media-size-landscape {
    --ratio-divider: 0.4657;
  }

  .featured-video .deferred-media__poster-icn svg {
    border-radius: 0;
  }

  @media (min-width: 576px) {
    .featured-video .video-card .--media-size--blank.--media-size-adapt {
      --ratio-divider: 0.7055;
    }

    .video_heading {
      margin: 15px 0 12px;
    }

    .featured-video .deferred-media__poster-icn {
      width: 50px;
      height: 50px;
    }
  }

  @media (min-width: 768px) {
    .featured-video_content {
      display: none;
    }

    .button--caption_wrapper .video_heading {
      max-width: 500px;
    }

    .button--caption_wrapper .video__caption {
      max-width: 380px;
    }

    .button--caption_wrapper .video_heading,
    .button--caption_wrapper .video__caption {
      display: block;
    }

    .featured-video .video-card .--media-size--blank.--media-size-adapt {
      --ratio-divider: 0.6055;
    }
  }

  @media (min-width: 992px) {
    .featured-video .video-card .--media-size--blank.--media-size-adapt {
      --ratio-divider: 0.5055;
    }

    .featured-video .deferred-media__poster-icn {
      width: 70px;
      height: 68px;
    }
  }

  @media (max-width: 575px) {
    .featured-video .deferred-media__poster-icn svg {
      width: 18px;
      height: 18px;
    }
  }

  .featured-video button:focus-visible.deferred-media__poster {
    padding: 10px;
  }
{%- endstyle -%}
<div
  class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {% if section_container_layout == 'container-fluid' or section_container_layout == 'contained-container' %}{{ section_scheme_class }} {{ section_corner_radius }}{% endif %} --align-center"
  style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;"
>
  <div class="{{- section_container_layout -}}">
    <div
      class="{{ section_prefix_class }}_wrapper {% if section_container_layout == 'container' %}{{ section_scheme_class }} {{ section_corner_radius }} internal--spacing{% endif %} {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
      data-threshold="0.3"
      data-frames='[{"opacity":"0","transform":"scale(1.1)","transform-origin": "50% 50% 0"},{"opacity":"1","transform":"scale(1)","transform-origin": "50% 50% 0"}]'
      data-options='{"duration":1000,"easing":"ease","delay":0,"fill":"both","iterations":1}'
    >
      <div class="{{ section_prefix_class }}_video-item">
        {%- render 'video-card',
          card: section,
          prefix_class: section_prefix_class,
          index: section.index,
          card_media_option: section.settings.section_media_size,
          widths_attr: '286, 380, 606, 734, 958, 1196, 1555',
          sizes_attr: '(max-width: 1259px) calc(100vw - 30px), calc(var(--cp-width-px) - 34px)',
          width_attr: 1555,
          loading_attr: loading_attr,
          video_caption: section.settings.description,
          video_heading: section.settings.video_heading,
          video_heading_weight: section.settings.video_heading_weight,
          video_heading_size: section.settings.video_heading_size,
          video_text_size: section.settings.video_text_size,
          video_description_weight: section.settings.video_description_weight
        -%}
        {%- if section.settings.video_heading != blank or section.settings.description != blank -%}
          <div class="{{ section_prefix_class }}_content">
            {%- if section.settings.video_heading != blank -%}
              <h2 class="video_heading {{ section.settings.video_heading_weight }} {{ section.settings.video_heading_size }}">
                {{- section.settings.video_heading -}}
              </h2>
            {%- endif -%}
            {%- if section.settings.description != blank -%}
              <p class="video__description {{ section.settings.video_text_size }} {{ section.settings.video_description_weight }}">
                {{- section.settings.description -}}
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
