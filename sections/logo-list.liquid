{%- liquid
  assign section_prefix_class = 'logo-list'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture loading_attr
    unless section.index != 1
      echo 'eager'
      else
        echo 'lazy'
    endunless
  endcapture

  capture marquee_direction
    if section.settings.marquee_direction == 'marquee_forward'
      echo 'forward'
      else
        echo 'backward'
    endif
  endcapture

  capture is_marquee_on
    if section.settings.enable_marquee
      echo 'true'
    endif
  endcapture

  assign multiply_factor = 6
  if section.blocks.size > 3
    assign multiply_factor = 4
    elsif section.blocks.size > 6
      assign multiply_factor = 2
  endif

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture
-%}
{%- style -%}
  .logo-list{
    --q-align-value: var(--mobile-q-align);
  }

  .logo-list--no-gutter .container-fluid,
  .grid-logo.logo-list_col{
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .logo-list marquee-component,
  .logo-list_list{
    margin-top: auto;
    margin-bottom: auto;
  }

  .logo-list_list li,
  .logo-list .marquee-component_col{
    display: flex;
    height: 84px;
  }

  .logo-list .marquee-component_col{
    width: calc(var(--cp-width) * 1px / 6 - (var(--cp-spacer-left, 15px) + var(--cp-spacer-right, 15px)));
    padding-left: 0;
    padding-right: 0;
  }

  .logo-list .img-placeholder{
    width: 100%;
    height: 84px;
  }

  .logo-list .logo-placeholder path,
  .logo-list .img-placeholder path{
    fill: currentColor;
  }

  .logo-list_list-logo{
    width: 100%;
    display: flex;
    padding-left: 10px;
    padding-right: 10px;
  }

  .logo-list_list-logo img{
    margin: auto;
  }

  .logo-list .logo-placeholder{
    margin-left: auto;
    margin-right: auto;
  }

  .logo-list_list-logo img{
    width: auto;
    max-height: 100%;
  }

  .logo-list_col,
  .logo-list_marquee-col{
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .logo-list_col:hover,
  .logo-list_marquee-col:hover{
    filter: grayscale(0);
    pointer-events: auto;
  }

  .logo-list_list-logo svg{
    width: 110px;
  }

  .logo-list {
    --desktop-columns-count: 1;
  }

  .logo-list_list.grid{
    row-gap: 0;
    margin-left: 0;
    margin-right: 0;
  }

  @media (min-width: 414px){
    .logo-list_list-logo svg{
      width: unset;
    }
  }

  @media(min-width: 576px){
    .logo-list {
      --desktop-columns-count: 2;
    }
  }

  @media (min-width: 768px){
    .logo-list {
      --desktop-columns-count: 3;
    }

    .logo-list_list-logo{
      padding-left: 30px;
      padding-right: 30px;
    }

    .logo-list{
      --q-align-value: var(--desktop-q-align);
    }
  }

  @media (min-width: 992px){
    .logo-list {
      --desktop-columns-count: 4;
    }

    .logo-list_list-logo{
      padding-left: 38px;
      padding-right: 38px;
    }
  }

  @media (min-width: 1200px){
    .logo-list {
      --desktop-columns-count: var(--columns-count);
    }
  }

  {%- assign query = '414px' -%}
  @media (min-width: {{ query }}) and (max-width: 575px){
    #{{ section.id }}{
      --desktop-columns-count: {{ section.settings.number_of_columns_on_mobile }};
    }
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {% if section_container_layout == 'container-fluid' or section_container_layout == 'contained-container' %}{{ section_scheme_class }} {{ section_corner_radius }}{% endif %} {% if is_marquee_on == 'true' %}{{ section_prefix_class }}--no-gutter{% endif %}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --mobile-q-align: {{ section.settings.section_mobile_text_alignment }}; --desktop-q-align: {{ section.settings.section_text_alignment }}; --columns-count: {{ section.settings.number_of_columns_on_desktop }}; --mobile-columns-count: {{ section.settings.number_of_columns_on_mobile }};" id="{{- section.id -}}">
  <div class="{{ section_container_layout }}">
    <div class="{{ section_prefix_class }}_wrapper {% if section_container_layout == 'container' %}{{ section_scheme_class }} {{ section_corner_radius }} internal--spacing{% endif %}">
      {%- if section.settings.enable_marquee -%}
        <marquee-component data-direction="{{- marquee_direction -}}" data-pause-on-hover="{{- section.settings.marquee_on_hover -}}" data-speed="{{- section.settings.marquee_speed -}}">
          <div class="marquee-component marquee-component--h-scroll">
            {%- for i in (1..multiply_factor) -%}
              {%- for block in section.blocks -%}
                {%- liquid
                  assign counter = forloop.index | modulo: section.settings.number_of_columns_on_desktop
                  if counter == 0
                    assign counter = section.settings.number_of_columns_on_desktop
                  endif
                -%}
                <div class="marquee-component_col {{ section_prefix_class }}_marquee-col clonedBefore">
                  <span
                    class="{{ section_prefix_class }}_list-logo {{ section_prefix_class }}_marquee-logo {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                    data-margin="0px 0px -20px 0px"
                    data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                    data-options='{"duration":1000,"easing":"ease","delay":{{ counter | times: 100 }},"fill":"both","iterations":1}'
                  >
                    {%- if block.settings.image != blank -%}
                      {%- liquid
                        assign logo_width = block.settings.image.width | round
                        capture image_alt
                          unless block.settings.image.alt == blank
                            echo block.settings.image.alt
                            else
                              echo 'logo_list.image_alt' | t: index: forloop.index
                          endunless
                        endcapture
      
                        capture logo_widths
                          echo logo_width
                        endcapture
                      -%}
                      {%- capture logo_sizes -%}
                        {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                      {%- endcapture -%}
                      {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                      {%- else -%}
                        {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                    {%- endif -%}
                  </span>
                </div>
              {%- endfor -%}
            {%- endfor -%}
            {%- for block in section.blocks -%}
              {%- liquid
                assign counter = forloop.index | modulo: section.settings.number_of_columns_on_desktop
                if counter == 0
                  assign counter = section.settings.number_of_columns_on_desktop
                endif
              -%}
              <div class="marquee-component_col {{ section_prefix_class }}_marquee-col">
                <span
                  class="{{ section_prefix_class }}_list-logo {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                  data-margin="0px 0px -20px 0px"
                  data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                  data-options='{"duration":1000,"easing":"ease","delay":{{ counter | times: 100 }},"fill":"both","iterations":1}'
                >
                  {%- if block.settings.image != blank -%}
                    {%- liquid
                      assign logo_width = block.settings.image.width | round
                      capture image_alt
                        unless block.settings.image.alt == blank
                          echo block.settings.image.alt
                          else
                            echo 'logo_list.image_alt' | t: index: forloop.index
                        endunless
                      endcapture
    
                      capture logo_widths
                        echo logo_width
                      endcapture
                    -%}
                    {%- capture logo_sizes -%}
                      {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                    {%- endcapture -%}
                    {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                    {%- else -%}
                      {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                  {%- endif -%}
                </span>
              </div>
            {%- endfor -%}
            {%- for i in (1..multiply_factor) -%}
              {%- for block in section.blocks -%}
                {%- liquid
                  assign counter = forloop.index | modulo: section.settings.number_of_columns_on_desktop
                  if counter == 0
                    assign counter = section.settings.number_of_columns_on_desktop
                  endif
                -%}
                <div class="marquee-component_col {{ section_prefix_class }}_marquee-col clonedAfter">
                  <span
                    class="{{ section_prefix_class }}_list-logo {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                    data-margin="0px 0px -20px 0px"
                    data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                    data-options='{"duration":1000,"easing":"ease","delay":{{ counter | times: 100 }},"fill":"both","iterations":1}'
                  >
                    {%- if block.settings.image != blank -%}
                      {%- liquid
                        assign logo_width = block.settings.image.width | round
                        capture image_alt
                          unless block.settings.image.alt == blank
                            echo block.settings.image.alt
                            else
                              echo 'logo_list.image_alt' | t: index: forloop.index
                          endunless
                        endcapture
      
                        capture logo_widths
                          echo logo_width
                        endcapture
                      -%}
                      {%- capture logo_sizes -%}
                        {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                      {%- endcapture -%}
                      {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                      {%- else -%}
                        {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                    {%- endif -%}
                  </span>
                </div>
              {%- endfor -%}
            {%- endfor -%}
          </div>
        </marquee-component>
        {%- else -%}
          <ul class="list-unstyled {{ section_prefix_class }}_list grid">
            {%- for block in section.blocks -%}
              {%- liquid
                assign counter = forloop.index | modulo: section.settings.number_of_columns_on_desktop
                if counter == 0
                  assign counter = section.settings.number_of_columns_on_desktop
                endif
              -%}
              <li {{ block.shopify_attributes }} class="grid-logo grid_col {{ section_prefix_class }}_col">
                <span
                  class="{{ section_prefix_class }}_list-logo {% if settings.enable_viewport_anim %}viewport-block{% endif %}"
                  data-margin="0px 0px -20px 0px"
                  data-frames='[{"opacity":"0","transform":"translateY(15px)"},{"opacity":"1","transform":"translateY(0px)"}]'
                  data-options='{"duration":1000,"easing":"ease","delay":{{ counter | times: 100 }},"fill":"both","iterations":1}'
                >
                  {%- if block.settings.image != blank -%}
                    {%- liquid
                      assign logo_width = block.settings.image.width | round
                      capture image_alt
                        unless block.settings.image.alt == blank
                          echo block.settings.image.alt
                          else
                            echo 'logo_list.image_alt' | t: index: forloop.index
                        endunless
                      endcapture

                      capture logo_widths
                        echo logo_width
                      endcapture
                    -%}
                    {%- capture logo_sizes -%}
                      {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                    {%- endcapture -%}
                    {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                    {%- else -%}
                      {{- 'lifestyle-1' | placeholder_svg_tag: 'logo-placeholder' -}}
                  {%- endif -%}
                </span>
              </li>
            {%- endfor -%}
          </ul>
      {%- endif -%}
    </div>
  </div>
</div>
