{%- liquid
  assign section_prefix_class = 'carousel'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
  
  capture section_height_class
    case section.settings.section_carousel_height
      when 'small'
        echo '--small-image'
      when 'medium'
        echo '--medium-image'
      when 'window_height'
        echo '--vh-image'
    endcase
  endcapture

  capture section_mobile_height_class
    case section.settings.section_mobile_carousel_height
      when 'small'
        echo '--small-mob-image'
      when 'medium'
        echo '--medium-mob-image'
      when 'window_height'
        echo '--vh-mob-image'
    endcase
  endcapture

  capture section_container_layout
    case section.settings.section_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture section_corner_radius
    case section.settings.section_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture
-%}
{%- style -%}
  .carousel-card,
  .carousel-card_bg-wrapper,
  .product-card_content-wrapper{
    position: relative;
  }

  .carousel-card{
    padding: 16px 0;
  }

  .carousel-card,
  .carousel-card_product,
  .carousel-card_bg-wrapper::before{
    z-index: 1;
  }

  .carousel-card,
  .carousel-card .container,
  .carousel-card_bg-wrapper::before,
  .carousel-card_bg-wrapper{
    height: 100%;
  }

  .carousel-card_bg-wrapper::before,
  .carousel-card_product{
    position: absolute;
  }

  .carousel-card_bg-wrapper::before{
    width: 100%;
  }

  .--small-mob-image{
    min-height: 320px;
  }

  .--medium-mob-image{
    min-height: 500px;
  }

  .--vh-mob-image{
    min-height: 550px;
  }

  .product-card_content-wrapper,
  .product-card_img{
    height: 72px;
  }

  .product-card_content-wrapper{
    border-radius: var(--section-radius);
    margin-top: -46px;
    z-index: 999;
    padding: 11px 19px 13px 19px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  .product-card_price,
  .carousel-card_product{
    display: block;
  }

  .carousel-card_product{
    text-decoration: none;
    --focus-outline-offset: 2px;
    width: 172px;
    margin: 21px 13px;
  }

  .carousel-card .tleft,
  .carousel-card .tright,
  .carousel-card_bg-wrapper::before{
    top: 0;
  }

  .carousel-card .tleft,
  .carousel-card .bleft,
  .carousel-card_bg-wrapper::before{
    left: 0;
  }

  .carousel-card .tright,
  .carousel-card .bright{
    right: 0;
  }

  .carousel-card .mcenter{
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .carousel-card .bright,
  .carousel-card .bleft{
    bottom: 0;
  }

  .product-card_price{
    margin-top: auto;
  }

  .product-card_price .regular-price,
  .product-card_price .product-price_unit-pricing{
    font-size: 1.2rem;
    line-height: 1.6rem;
  }

  .product-card_price .main-price{
    font-size: 1.8rem;
    line-height: 2.2rem;
  }

  .product-card_description{
    margin: 7px 0;
  }

  .carousel-card_bg-wrapper::before{
    content: "";
    background: var(--overlay-bg);
  }

  .product-card_img{
    border-top-left-radius: var(--section-radius);
    border-top-right-radius: var(--section-radius);
  }  

  .carousel-card_image,
  .carousel-card_bg-wrapper::before{
    border-radius: var(--section-radius);
  }

  .carousel-card_image svg,
  .carousel-card_image img,
  .carousel-card_image video,
  .product-card_img svg,
  .product-card_img img{
    border-radius: inherit;
  }

  .internal--spacing .carousel-card{
    padding: 8px;
    padding-bottom: 0;
  }

  .carousel-card_title{
    margin-top: 15px;
    margin-bottom: 2px;
  }

  .carousel .splide__arrows{
    margin-top: 2px;
    padding-bottom: 10px;
  }

  .mcenter.carousel-card_product{
    margin: 0;
  }

  .carousel-card_title{
    text-align: center
  }

  .product-card_description{
    display: none;
  }

@media (min-width: 576px){
  .--small-mob-image{
    min-height: 400px;
  }

  .--medium-mob-image{
    min-height: 500px;
  }

  .--vh-mob-image{
    min-height: 560px;
  }
}

@media (min-width: 768px){
  .--small-image{
    min-height: 420px;
  }

  .--medium-image{
    min-height: 558px;
  }

  .--vh-image {
    min-height: 600px;
  }

  .carousel-banner_two-col{
    display: flex;
    gap: 31px;
  }

  .carousel-banner_one,
  .carousel-banner_two{
    width: 50%;
  }

  .carousel-card_title-two{
    margin-left: auto;
  }

  .carousel-card_title.carousel-card_title-two{
    text-align: right;
  }

  .carousel-card_title{
    text-align: left
  }

  .product-card_description{
    display: block;
  }

  .carousel-card_product{
    margin: 24px;
    width: 191px;
  }

  .carousel-banner-product-two{
    margin-left: 30px;
  }

  .internal--spacing .carousel-card{
    padding: 16px 21px;
  }

  .product-card_content-wrapper{
    margin-top: -60px;
  }

  .product-card_content-wrapper,
  .product-card_img{
    height: 141px;
  }

  .product-card_price .main-price{
    font-size: 2rem;
    line-height: 2.8rem;
  }
}

@media (min-width: 992px){
