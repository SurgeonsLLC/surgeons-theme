  }

  .carousel-card_title{
    max-width: 400px;
  }

  .carousel .splide__arrows{
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    max-width: 300px;
  }

  .internal--spacing .carousel-card{
    padding-bottom: 16px;
  }

  .carousel-card_title{
    margin-top: 15px;
    margin-bottom: 12px;
  }
}

@media(min-width: 1400px){
  .carousel-card_title{
    max-width: 480px;
  }

  .carousel .splide__arrows{
    max-width: 350px;
  }
}
