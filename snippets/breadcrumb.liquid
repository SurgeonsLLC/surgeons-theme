{%- comment -%}
  renders breadcrumb on page templates
  usage
    {%- render 'breadcrumb', border_top: section.settings.show_top_bdr, border_bottom: section.settings.show_bottom_bdr, color_scheme: section.settings.section_color_scheme -%}
{%- endcomment -%}
 {%- liquid
  capture breadcrumb_container_layout
    case breadcrumb_container_layout
      when 'page-width'
        echo 'container'
      when 'contained-content'
        echo 'contained-container'
      when 'container-fluid'
        echo 'container-fluid'
    endcase
  endcapture

  capture corner_radius
    case breadcrumb_corner_radius
      when 'top_corners_radius'
        echo 'top_corners_radius'
      when 'bottom_corners_radius'
        echo 'bottom_corners_radius'
      when 'both_corners_radius'
        echo 'both_corners_radius'
      when 'no_corners_radius'
        echo 'no_corner_radius'
    endcase
  endcapture
 -%}
{%- unless template == 'index' -%}
  {%- assign t = template | split: '.' | first -%}
  <nav class="breadcrumb-nav global-block {% if breadcrumb_container_layout == 'container-fluid' or breadcrumb_container_layout == 'contained-container' %}scheme--{{ color_scheme }} {{ corner_radius }} {% if border_top %}--bdr-top{% endif %} {% if border_bottom %}--bdr-bottom{% endif %}{% endif %}" aria-label="{{- 'breadcrumb.title' | t -}}">
    <div class="breadcrumb_wrapper">
      <div class="{{ breadcrumb_container_layout }}">
        <ol class="breadcrumb-list {% if breadcrumb_container_layout == 'container' %}scheme--{{ color_scheme }} {{ corner_radius }} internal--spacing {% if border_top %}--bdr-top{% endif %} {% if border_bottom %}--bdr-bottom{% endif %}{% endif %} {{ content_alignment }} --v-align-middle list-unstyled --uppercase">
          <li class="breadcrumb-list_item --v-align-middle">
            <a class="breadcrumb-list_link --word-break" href="{{- routes.root_url -}}">
              {{- 'page.home' | t -}}
            </a>
          </li>
          {%- case t -%}
            {%- when 'page' -%}
              <li class="breadcrumb-list_item --v-align-middle">
                <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                  {{- page.title -}}
                </span>
              </li>
            {%- when 'product' -%}
              {%- assign product_collections = product.collections -%}
              {%- if product_collections.size > 0 -%}
                {%- assign product_collection = product_collections.first -%}
                <li class="breadcrumb-list_item --v-align-middle">
                  <a class="breadcrumb-list_link --word-break" href="{{- product_collection.url -}}">
                    {{- product_collection.title -}}
                  </a>
                </li>
              {%- endif -%}
              <li class="breadcrumb-list_item --v-align-middle">
                <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                  {{- product.title -}}
                </span>
              </li>
            {%- when 'collection' and collection.handle -%}
              {%- if current_tags -%}
                <li class="breadcrumb-list_item --v-align-middle">
                  {{- collection.title | link_to: collection.url -}}
                </li>
                <li class="breadcrumb-list_item --v-align-middle">
                  <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                    <span>
                      {{- current_tags | join: " + " -}}
                    </span>
                  </span>
                </li>
              {%- else -%}
                <li class="breadcrumb-list_item --v-align-middle">
                  <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                    {{- collection.title -}}
                  </span>
                </li>
              {%- endif -%}
            {%- when 'blog' -%}
              {%- if current_tags -%}
                <li class="breadcrumb-list_item --v-align-middle">
                  {{- blog.title | link_to: blog.url -}}
                </li>
                <li class="breadcrumb-list_item --v-align-middle">
                  <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                    {{- current_tags | join: " + " -}}
                  </span>
                </li>
              {%- else -%}
                <li class="breadcrumb-list_item --v-align-middle">
                  <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                    {{- blog.title -}}
                  </span>
                </li>
              {%- endif -%}
            {%- when 'article' -%}
              <li class="breadcrumb-list_item --v-align-middle">
                <a class="breadcrumb-list_link --word-break" href="{{- blog.url -}}">
                  {{- blog.title -}}
                </a>
              </li>
              <li class="breadcrumb-list_item --v-align-middle">
                <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                  {{- article.title -}}
                </span>
              </li>
            {%- else -%}
              <li class="breadcrumb-list_item --v-align-middle">
                <span class="breadcrumb-list_link --word-break" aria-current="{{- 'page.current_label' | t -}}">
                  {{- page_title -}}
                </span>
              </li>
          {%- endcase -%}
        </ol>
      </div>
    </div>
  </nav>
{%- endunless -%}