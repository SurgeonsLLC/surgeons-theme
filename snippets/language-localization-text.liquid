{%- comment -%}
  Renders the language picker for the localization form

  Accepts:
    - localPosition: pass in the position in which the form is coming up to create specific IDs
{%- endcomment -%}
<div class="dropdown-component dropdown-component--localization dropdown-component--lang">
  <strong id="{{ localPosition }}-lang-heading-{{ resp }}" class="visually-hidden" role="heading" aria-level="2">
    {{- 'localization.language_label' | t -}}
  </strong>
  <localization-dropdown data-submission="true" data-form-id="{{- id -}}">
    <button
      type="button"
      class="dropdown-component_opener dropdown-localization_opener --align-left"
      aria-expanded="false"
      aria-describedby="{{- localPosition -}}-lang-heading-{{ resp }}"
    >
      {{- localization.language.name -}}
    </button>
    <input type="hidden" name="locale_code" data-submit-input="" value="{{- localization.language.iso_code -}}">
  </localization-dropdown>
</div>
